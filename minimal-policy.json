{
  "id": "test-policy-1",
  "name": "Test Policy",
  "description": "Minimal test policy",
  "version": 1,
  "enabled": true,
  "priority": 100,
  "applies_to": ["docker-linux-agent"],
  "tunnels": [
    {
      "name": "test-tunnel-1",
