# Build stage
FROM golang:1.21-alpine AS builder

WORKDIR /build

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build server
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-w -s" -o ipsec-server ./cmd/server

# Final stage
FROM alpine:latest

RUN apk --no-cache add ca-certificates sqlite

WORKDIR /app

COPY --from=builder /build/ipsec-server .
COPY configs/server-config.yaml /etc/ipsec-server/config.yaml

RUN mkdir -p /data

EXPOSE 8080

CMD ["./ipsec-server", "start", "--config", "/etc/ipsec-server/config.yaml"]
